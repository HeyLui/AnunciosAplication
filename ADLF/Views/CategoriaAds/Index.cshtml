<<section class="content">
    <!--============ Categories =============================================================================-->
    <section class="block" >
        <div class="container">
            <div class="float-right float-xs-none price">
                <a class="btn btn-primary" asp-action="Create">Crear Categoria</a>
            </div>
            <h2>Categorias</h2>

            <ul class="categories-list clearfix">
                @foreach (var item in Model)
                {
                <li>
                    <i class="category-icon ">
                        <a class="fa fa-gears"></a>
                    </i>
                    <form action="@Url.Action("Index", "Anuncios")" method="post">
                        <input name="em" hidden value="@Html.DisplayFor(modelItem => item.IdTipoad)" />
                        <input type="submit" class="text-caps btn btn-light" style="background:none; margin-bottom:5px;border:none;" value="@Html.DisplayFor(modelItem => item.CategoriaName)" />
                        <br/>
                        <div class="sub-categories">
                            <a asp-action="Edit" asp-route-id="@item.IdTipoad" class="btn btn-info text-caps small">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.IdTipoad" class="btn btn-warning text-caps small">Eliminar</a>
                        </div>
                    </form>
                </li>
                }

                <!--end category item-->
            </ul>
            <!--end categories-list-->
        </div>
        <!--end container-->
    </section>
    <!--end block-->
    <!--============ End Categories =========================================================================-->
    <!--============ Featured Ads ===========================================================================-->
    <!--end block-->



</section>

