            <form class="form form-submit" asp-action="Create" enctype="multipart/form-data">
                <section>
                    <h2 class="text-danger text-caps">Nuevo Anuncio</h2>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="title" class="col-form-label required">Nombre del anuncio</label>
                                <input name="nombre" type="text" class="form-control" id="title" placeholder="Titulo de anuncio" required>
                            </div>
                            <!--end form-group-->
                        </div>
                        <!--end col-md-8-->
                        <div class="col-md-4">

                            <div class="form-group">
                                <label for="submit-category" class="col-form-label required">Categoria del anuncio</label>
                                <select asp-for="IdTipoad" class="change-tab" asp-items="ViewBag.IdTipoad" name="idtipo"></select>
                                
                            </div>
                            <!--end form-group-->
                        </div>
                    </div>
                    <div class="row">
                        <section>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="title" class="col-form-label required">Descripcion del anuncio</label>
                                    <textarea required name="descripcion" id="details" placeholder="Un texto relevante..." class="form-control" cols="200" rows="5" maxlength="700"></textarea>
                                </div>
                            </div>
                            <!--end form-group-->
                        </section>
                    </div>
                </section>
                <!--end basic information-->


                <section style="margin-top:-100px;">
                    <label for="submit-category" class="col-form-label required">Imagenes  </label><label for="submit-category" class="text-caps text-warning">Soporte maximo de resolucion 1080 x 720 tamaño y max 2-mb por imagen  </label>
                    <div class="row">

                        <div class="col-md-4">

                            <div class="file-upload">
                                <input id=a type=file multiple required class="file-upload-input with-preview" accept="image/apng, image/avif, image/gif, image/jpeg, image/png, image/svg+xml, image/webp"  name="imgphoto"  maxlength="1">

                                <span class="text-danger"><i class="fa fa-plus-circle"></i>Imagen 1 (Requerida) </span>
                            </div>
                            <div class="file-upload-previews"><img id=img2 style="width:350px;height:350px;"></div>
                            <!--end form-group-->
                        </div>
                        <div class="col-md-4">


                            <div class="file-upload">
                                <input id=i type=file multiple class="file-upload-input with-preview" accept="image/apng, image/avif, image/gif, image/jpeg, image/png, image/svg+xml, image/webp" name="imgphoto2" maxlength="1">

                                <span><i class="fa fa-plus-circle"></i>Imagen 2 (Opcional) </span>
                            </div>
                            <div class="file-upload-previews"><img id=img style="width:350px;height:350px;"></div>
                            <!--end form-group-->
                        </div>
                        <div class="col-md-4">

                            <div class="file-upload">
                                <input id=b type=file multiple class="file-upload-input with-preview" accept="image/apng, image/avif, image/gif, image/jpeg, image/png, image/svg+xml, image/webp" name="imgphoto3" maxlength="1">

                                <span><i class="fa fa-plus-circle"></i>Imagen 3 (Opcional) </span>
                            </div>
                            <div class="file-upload-previews"><img id=img3 style="width:350px;height:350px;"></div>
                            <!--end form-group-->
                        </div>
                    </div>

                </section>



                <section class="clearfix">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary large icon float-right">Crear Anuncio<i class="fa fa-chevron-right"></i></button>
                    </div>
                </section>
            </form>
            <!--end form-submit-->
        </div>
        <!--end container-->
    </section>
    <!--end block-->
</section>
<!--end content-->

<script>
    document.getElementById("i").onchange = function () {

        // create Blob-URL for File (=Blob) object
        var url = (URL || webkit).createObjectURL(this.files[0]);

        // set Blob-URL as image source:
        document.getElementById("img").src = url;
    };
    document.getElementById("a").onchange = function () {

        // create Blob-URL for File (=Blob) object
        var url = (URL || webkit).createObjectURL(this.files[0]);

        // set Blob-URL as image source:
        document.getElementById("img2").src = url;
    };
    document.getElementById("b").onchange = function () {

        // create Blob-URL for File (=Blob) object
        var url = (URL || webkit).createObjectURL(this.files[0]);

        // set Blob-URL as image source:
        document.getElementById("img3").src = url;
    };
</script>
